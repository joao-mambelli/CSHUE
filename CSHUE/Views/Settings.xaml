<Page x:Class="CSHUE.Views.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:attachedBehavior="clr-namespace:CSHUE.AttachedBehaviors"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      xmlns:p="clr-namespace:CSHUE.Properties"
      xmlns:h="clr-namespace:CSHUE.Helpers"
      xmlns:system="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d"
      Foreground="{DynamicResource SystemBaseHighColorBrush}"
      FontSize="14"
      d:DesignWidth="800"
      Title="Settings">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="57" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Margin="24,0,0,0" FontSize="40" Text="Settings" />

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Style="{DynamicResource Windows10ScrollViewer}"
                      ContextMenuService.IsEnabled="False"
                      attachedBehavior:ScrollAnimationBehavior.IsEnabled="True"                         
                      attachedBehavior:ScrollAnimationBehavior.TimeDuration="00:00:00.35"
                      attachedBehavior:ScrollAnimationBehavior.PointsToScroll="128">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MaxWidth="500" />
                </Grid.ColumnDefinitions>
                <StackPanel Margin="24,0,20,30">
                    <TextBlock Margin="0,20,0,2" FontSize="20" Text="Events" />

                    <TabControl Margin="0,2,0,9"
                                Style="{DynamicResource Windows10TabControl}">
                        <TabItem Style="{DynamicResource Windows10TabItem}"
                                 Header="Primary"
                                 Foreground="{DynamicResource SystemBaseHighColorBrush}">
                            <StackPanel>
                                <TextBlock Margin="0,15,0,2" Text="Main Menu" />

                                <Button Height="40" HorizontalAlignment="Stretch"
                                        Style="{DynamicResource Windows10Button}">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="Blue" Offset="0" />
                                            <GradientStop Color="Blue" Offset="1" />
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                                <TextBlock Margin="0,15,0,2" Text="Terrorists Win" />
                                <Button Height="40" HorizontalAlignment="Stretch"
                                        Style="{DynamicResource Windows10Button}">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="Orange" Offset="0" />
                                            <GradientStop Color="Orange" Offset="1" />
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                                <TextBlock Margin="0,15,0,2" Text="Counter-Terrorists Win" />
                                <Button Height="40" HorizontalAlignment="Stretch"
                                        Style="{DynamicResource Windows10Button}">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="Blue" Offset="0" />
                                            <GradientStop Color="Blue" Offset="1" />
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                                <TextBlock Margin="0,15,0,2" Text="Round Starts" />
                                <Button Height="40" HorizontalAlignment="Stretch"
                                        Style="{DynamicResource Windows10Button}">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="Green" Offset="0" />
                                            <GradientStop Color="Green" Offset="1" />
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                                <TextBlock Margin="0,15,0,2" Text="Bomb Has Been Planted" />
                                <Button Height="40" HorizontalAlignment="Stretch"
                                        Style="{DynamicResource Windows10Button}">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="Red" Offset="0" />
                                            <GradientStop Color="Red" Offset="1" />
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                            </StackPanel>
                        </TabItem>

                        <TabItem Style="{DynamicResource Windows10TabItem}"
                                 Header="Secondary"
                                 Foreground="{DynamicResource SystemBaseHighColorBrush}">
                            <StackPanel>
                                <TextBlock Margin="0,15,0,2" Text="Bomb Explodes" />
                                <Button Height="40" HorizontalAlignment="Stretch"
                                        Style="{DynamicResource Windows10Button}">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="Red" Offset="0" />
                                            <GradientStop Color="Red" Offset="1" />
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                                <TextBlock Margin="0,15,0,2" Text="Bomb Blink" />
                                <Button Height="40" HorizontalAlignment="Stretch"
                                        Style="{DynamicResource Windows10Button}">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="Red" Offset="0" />
                                            <GradientStop Color="Red" Offset="1" />
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                                <TextBlock Margin="0,15,0,2" Text="Freeze Time" />
                                <Button Height="40" HorizontalAlignment="Stretch"
                                        Style="{DynamicResource Windows10Button}">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="Green" Offset="0" />
                                            <GradientStop Color="Green" Offset="1" />
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                                <TextBlock Margin="0,15,0,2" Text="Warmup" />
                                <Button Height="40" HorizontalAlignment="Stretch"
                                        Style="{DynamicResource Windows10Button}">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="Green" Offset="0" />
                                            <GradientStop Color="Green" Offset="1" />
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                            </StackPanel>
                        </TabItem>

                        <TabItem Style="{DynamicResource Windows10TabItem}"
                                 Header="Tertiary"
                                 Foreground="{DynamicResource SystemBaseHighColorBrush}">
                            <StackPanel>
                                <TextBlock Margin="0,15,0,2" Text="Player Gets a Kill" />
                                <Button Height="40" HorizontalAlignment="Stretch"
                                        Style="{DynamicResource Windows10Button}">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="Green" Offset="0" />
                                            <GradientStop Color="Green" Offset="1" />
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Duration:" />
                                    <xctk:DecimalUpDown Value="{Binding Source={x:Static p:Settings.Default}, Path=PlayerGetsKillDuration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Background="{DynamicResource SystemAltLowColorBrush}"
                                                        Foreground="{DynamicResource SystemBaseHighColorBrush}"
                                                        ButtonSpinnerLocation="Left"
                                                        BorderThickness="0"
                                                        Width="42"
                                                        Margin="5,0,0,0"
                                                        TextAlignment="Center"
                                                        Increment=".5"
                                                        Minimum="1"
                                                        Maximum="60"
                                                        DefaultValue="1.5"
                                                        DisplayDefaultValueOnEmptyText="True" />
                                        <TextBlock Text="s" Margin="3,0,0,0"/>
                                </StackPanel>
                                <TextBlock Margin="0,15,0,2" Text="Player Gets Killed" />
                                <Button Height="40" HorizontalAlignment="Stretch"
                                        Style="{DynamicResource Windows10Button}">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="Red" Offset="0" />
                                            <GradientStop Color="Red" Offset="1" />
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                    <TextBlock Text="Duration:" />
                                    <xctk:DecimalUpDown Value="{Binding Source={x:Static p:Settings.Default}, Path=PlayerGetsKilledDuration, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                        Background="{DynamicResource SystemAltLowColorBrush}"
                                                        Foreground="{DynamicResource SystemBaseHighColorBrush}"
                                                        ButtonSpinnerLocation="Left"
                                                        BorderThickness="0"
                                                        Width="42"
                                                        Margin="5,0,0,0"
                                                        TextAlignment="Center"
                                                        Increment=".5"
                                                        Minimum="1"
                                                        Maximum="60"
                                                        DefaultValue="3.0"
                                                        DisplayDefaultValueOnEmptyText="True" />
                                    <TextBlock Text="s" Margin="3,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </TabItem>

                        <TabItem Style="{DynamicResource Windows10TabItem}"
                                 Header="Quarternary"
                                 Foreground="{DynamicResource SystemBaseHighColorBrush}">
                            <StackPanel>
                                <TextBlock Margin="0,15,0,2" Text="Player Gets Flashed" />
                                <Button Height="40" HorizontalAlignment="Stretch"
                                        Style="{DynamicResource Windows10Button}">
                                    <Button.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                            <GradientStop Color="White" Offset="0" />
                                            <GradientStop Color="White" Offset="1" />
                                        </LinearGradientBrush>
                                    </Button.Background>
                                </Button>
                            </StackPanel>
                        </TabItem>
                    </TabControl>

                    <TextBlock Margin="0,20,0,2" FontSize="20" Text="CSHUE" />
                    <CheckBox Margin="0,15,0,9"
                              Style="{DynamicResource Windows10CheckBox}"
                              HorizontalAlignment="Left"
                              IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=RunOnStartup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBlock Text="Run minimized" />
                    </CheckBox>
                    <CheckBox Margin="30,7,0,9"
                              Style="{DynamicResource Windows10CheckBox}"
                              HorizontalAlignment="Left"
                              IsEnabled="{Binding Source={x:Static p:Settings.Default}, Path=RunOnStartup}"
                              IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=RunOnStartupMinimized, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBlock Text="Run CSHUE when my computer starts" />
                    </CheckBox>
                    <CheckBox Margin="0,15,0,9"
                              Style="{DynamicResource Windows10CheckBox}"
                              HorizontalAlignment="Left"
                              IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=MinimizeToSystemTray, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBlock Text="Minimize to system tray" />
                    </CheckBox>
                    <CheckBox Margin="0,15,0,9"
                              Style="{DynamicResource Windows10CheckBox}"
                              HorizontalAlignment="Left"
                              IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=AutoMinimize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBlock Text="Minimize CSHUE when CS:GO is detected" />
                    </CheckBox>
                    <StackPanel Orientation="Horizontal" Margin="0,15,0,9">
                        <TextBlock Text="CS:GO process checking period:" />
                        <xctk:ByteUpDown Value="{Binding Source={x:Static p:Settings.Default}, Path=CsgoCheckingPeriod, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         Background="{DynamicResource SystemBaseLowColorBrush}"
                                         Foreground="{DynamicResource SystemBaseHighColorBrush}"
                                         ButtonSpinnerLocation="Left"
                                         BorderThickness="0"
                                         Width="39"
                                         Margin="5,0,0,0"
                                         TextAlignment="Center"
                                         Minimum="1"
                                         Maximum="60"
                                         DefaultValue="7"
                                         DisplayDefaultValueOnEmptyText="True" />
                        <TextBlock Text="s" Margin="3,0,0,0"/>
                    </StackPanel>
                    <CheckBox Margin="0,15,0,9"
                              Style="{DynamicResource Windows10CheckBox}"
                              HorizontalAlignment="Left"
                              IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=TriggerSpecEvents, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBlock Text="Also trigger player events when spectating" />
                    </CheckBox>
                    <CheckBox Margin="0,15,0,9"
                              Style="{DynamicResource Windows10CheckBox}"
                              HorizontalAlignment="Left"
                              IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=RememberLightsStates, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBlock Text="Remember lights states" />
                    </CheckBox>
                    <CheckBox Margin="0,15,0,9"
                              Style="{DynamicResource Windows10CheckBox}"
                              HorizontalAlignment="Left"
                              IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=AutoActivate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBlock Text="Automatically activate between" />
                    </CheckBox>
                    <!--<TextBlock Text="Language" Margin="0,15,0,4"/>
                    <ComboBox Margin="0,4,0,9"
                              Name="Languages"
                              Width="280"
                              HorizontalAlignment="Left"
                              Style="{DynamicResource Windows10ComboBox}"
                              SelectedIndex="{Binding Source={x:Static p:Settings.Default}, Path=Language, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <system:String>English (US)</system:String>
                        <system:String>Português (BR)</system:String>
                    </ComboBox>-->

                    <TextBlock Margin="0,20,0,2" FontSize="20" Text="CS:GO" />
                    <CheckBox Margin="0,15,0,9"
                              Style="{DynamicResource Windows10CheckBox}"
                              HorizontalAlignment="Left"
                              IsChecked="{Binding Source={x:Static p:Settings.Default}, Path=RunCsgo, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBlock Text="Run CS:GO on CSHUE startup" />
                    </CheckBox>
                    <TextBox Height="35"
                             Margin="0,2,0,9"
                             VerticalContentAlignment="Center"
                             Style="{StaticResource HintTextBox}"
                             Tag="Launch Options"
                             Text="{Binding Source={x:Static p:Settings.Default}, Path=LaunchOptions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

                    </TextBox>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
