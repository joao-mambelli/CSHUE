<Page x:Class="CSHUE.Views.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CSHUE.Views"
      xmlns:AttachedBehavior="clr-namespace:CSHUE.AttachedBehaviors"
      xmlns:Styles="clr-namespace:CSHUE.Styles"
      mc:Ignorable="d"
      Foreground="{DynamicResource SystemBaseHighColorBrush}"
      FontSize="14"
      d:DesignWidth="800"
      Title="Settings">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="57" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Margin="24,0,0,0" FontSize="40" Text="Settings" />

        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      Style="{DynamicResource Windows10ScrollViewer}"
                      ContextMenuService.IsEnabled="False"
                      AttachedBehavior:ScrollAnimationBehavior.IsEnabled="True"                         
                      AttachedBehavior:ScrollAnimationBehavior.TimeDuration="00:00:00.35"
                      AttachedBehavior:ScrollAnimationBehavior.PointsToScroll="32">
            <StackPanel Margin="24,0,20,0">
                <TextBlock Margin="0,20,0,2" FontSize="20" Text="Events" />
                <TabControl Margin="0,2,0,30" Style="{DynamicResource Windows10TabControl}">
                    <TabItem Style="{DynamicResource Windows10TabItem}"
                             Header="Primary">
                        <StackPanel>
                            <TextBlock Margin="0,15,0,2" Text="Main Menu" />

                            <Button Height="40" HorizontalAlignment="Stretch"
                                    Style="{DynamicResource Windows10Button}">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="Blue" Offset="0" />
                                        <GradientStop Color="Blue" Offset="1" />
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                            <TextBlock Margin="0,15,0,2" Text="Terrorists Win" />
                            <Button Height="40" HorizontalAlignment="Stretch"
                                    Style="{DynamicResource Windows10Button}">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="Orange" Offset="0" />
                                        <GradientStop Color="Orange" Offset="1" />
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                            <TextBlock Margin="0,15,0,2" Text="Counter-Terrorists Win" />
                            <Button Height="40" HorizontalAlignment="Stretch"
                                    Style="{DynamicResource Windows10Button}">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="Blue" Offset="0" />
                                        <GradientStop Color="Blue" Offset="1" />
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                            <TextBlock Margin="0,15,0,2" Text="Round Starts" />
                            <Button Height="40" HorizontalAlignment="Stretch"
                                    Style="{DynamicResource Windows10Button}">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="Green" Offset="0" />
                                        <GradientStop Color="Green" Offset="1" />
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                            <TextBlock Margin="0,15,0,2" Text="Bomb Has Been Planted" />
                            <Button Height="40" HorizontalAlignment="Stretch"
                                    Style="{DynamicResource Windows10Button}">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="Red" Offset="0" />
                                        <GradientStop Color="Red" Offset="1" />
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                        </StackPanel>
                    </TabItem>

                    <TabItem Style="{DynamicResource Windows10TabItem}"
                             Header="Secondary"
                             Foreground="{DynamicResource SystemBaseHighColorBrush}">
                        <StackPanel>
                            <TextBlock Margin="0,15,0,2" Text="Bomb Explodes" />
                            <Button Height="40" HorizontalAlignment="Stretch"
                                    Style="{DynamicResource Windows10Button}">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="Red" Offset="0" />
                                        <GradientStop Color="Red" Offset="1" />
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                            <TextBlock Margin="0,15,0,2" Text="Bomb Blink" />
                            <Button Height="40" HorizontalAlignment="Stretch"
                                    Style="{DynamicResource Windows10Button}">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="Red" Offset="0" />
                                        <GradientStop Color="Red" Offset="1" />
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                            <TextBlock Margin="0,15,0,2" Text="Freeze Time" />
                            <Button Height="40" HorizontalAlignment="Stretch"
                                    Style="{DynamicResource Windows10Button}">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="Green" Offset="0" />
                                        <GradientStop Color="Green" Offset="1" />
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                            <TextBlock Margin="0,15,0,2" Text="Warmup" />
                            <Button Height="40" HorizontalAlignment="Stretch"
                                    Style="{DynamicResource Windows10Button}">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="Green" Offset="0" />
                                        <GradientStop Color="Green" Offset="1" />
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                        </StackPanel>
                    </TabItem>

                    <TabItem Style="{DynamicResource Windows10TabItem}"
                             Header="Tertiary"
                             Foreground="{DynamicResource SystemBaseHighColorBrush}">
                        <StackPanel>
                            <TextBlock Margin="0,15,0,2" Text="Player Gets a Kill" />
                            <Button Height="40" HorizontalAlignment="Stretch"
                                    Style="{DynamicResource Windows10Button}">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="Green" Offset="0" />
                                        <GradientStop Color="Green" Offset="1" />
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="Duration:" />
                                <TextBox Width="20" Margin="5,0,0,0" MaxLength="2"
                                         PreviewTextInput="AcceptsNumber" 
                                         TextAlignment="Center"/>
                                <TextBlock Text="s" Margin="3,0,0,0"/>
                            </StackPanel>
                            <TextBlock Margin="0,15,0,2" Text="Player Gets Killed" />
                            <Button Height="40" HorizontalAlignment="Stretch"
                                    Style="{DynamicResource Windows10Button}">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="Red" Offset="0" />
                                        <GradientStop Color="Red" Offset="1" />
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                <TextBlock Text="Duration:" />
                                <TextBox Width="20" Margin="5,0,0,0" MaxLength="2"
                                         PreviewTextInput="AcceptsNumber" 
                                         TextAlignment="Center"/>
                                <TextBlock Text="s" Margin="3,0,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </TabItem>

                    <TabItem Style="{DynamicResource Windows10TabItem}"
                             Header="Quarternary"
                             Foreground="{DynamicResource SystemBaseHighColorBrush}">
                        <StackPanel>
                            <TextBlock Margin="0,15,0,2" Text="Player Gets Flashed" />
                            <Button Height="40" HorizontalAlignment="Stretch"
                                    Style="{DynamicResource Windows10Button}">
                                <Button.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="White" Offset="0" />
                                        <GradientStop Color="White" Offset="1" />
                                    </LinearGradientBrush>
                                </Button.Background>
                            </Button>
                        </StackPanel>
                    </TabItem>
                </TabControl>

                <TextBlock Margin="0,20,0,2" FontSize="20" Text="CSHUE" />
                <CheckBox Margin="0,15,0,9" Style="{DynamicResource Windows10CheckBox}">
                    <TextBlock Text="Run CSHUE when my computer starts" />
                </CheckBox>
                <CheckBox Margin="0,15,0,9" Style="{DynamicResource Windows10CheckBox}">
                    <TextBlock Text="Minimize to system tray" />
                </CheckBox>
                <CheckBox Margin="0,15,0,9" Style="{DynamicResource Windows10CheckBox}">
                    <TextBlock Text="Minimize CSHUE when CS:GO is detected" />
                </CheckBox>
                <CheckBox Margin="0,15,0,9" Style="{DynamicResource Windows10CheckBox}">
                    <TextBlock Text="Also trigger player events when spectating" />
                </CheckBox>
                <CheckBox Margin="0,15,0,9" Style="{DynamicResource Windows10CheckBox}">
                    <TextBlock Text="Remember lights states" />
                </CheckBox>
                <CheckBox Margin="0,15,0,9" Style="{DynamicResource Windows10CheckBox}">
                    <TextBlock Text="Automatically activate between" />
                </CheckBox>

                <TextBlock Margin="0,20,0,2" FontSize="20" Text="CS:GO" />
                <CheckBox Margin="0,15,0,9" Style="{DynamicResource Windows10CheckBox}">
                    <TextBlock Text="Run CS:GO on CSHUE startup" />
                </CheckBox>
                <TextBox Height="35"
                         Margin="0,2,0,30"
                         BorderThickness="2"
                         VerticalContentAlignment="Center"
                         Style="{StaticResource HintTextBox}"
                         Tag="aaaa">

                </TextBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
